#!/bin/sh

#
#   This file is part of Waver
#   Copyright (C) 2017 Peter Papp <peter.papp.p@gmail.com>
#   Please visit https://launchpad.net/waver for details
#
#   This is not a configure script generated by autoconf 
#   It's only a simple way to select and run the correct 
#   qmake version. Linux only!
#

for found in `find / -type f -name "qmake" 2> /dev/null`; do
    version_info=`$found --version`
    
    if echo $version_info | grep 5.7 | grep gcc; then
        echo $found
        eval "$found waver_all.pro"
        exit
    fi
done

echo Error: did not find qmake version 5.7 gcc
exit 1
